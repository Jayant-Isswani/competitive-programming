#include <bits/stdc++.h>
using namespace std;
 
int main() {
	int t;
	cin>>t;
	while(t--)
	{
	    long long int n;
	    cin>>n;
	    long long int arr[n];
	    long long int min=INT_MAX;
	    for(int i=0;i<n;i++)
	    {
	        cin>>arr[i];
	        if(min>arr[i])
	        min=arr[i];
	    }
	    cout<<min*(n-1)<<endl;
	}
	return 0;
} 

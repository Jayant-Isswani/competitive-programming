#include <bits/stdc++.h>
using namespace std;
 
int main() {
    int t;
    cin>>t;
    while(t--)
    {
    	int n;
    	cin>>n;
    	string str;
    	cin>>str;
    	long long int counter=0;
    	for(int i=0;i<n;i++)
    	{
    	    if(str[i]=='1')
    	    counter++;
    	}
    	cout<<((counter+1)*counter)/2<<endl;
    }
    return 0;
} 

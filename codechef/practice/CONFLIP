#include <iostream>
using namespace std;
 
int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--)
	{
	    int g;
	    cin>>g;
	    while(g--)
	    {
	        int i,n,q;
	        cin>>i>>n>>q;
	        int head,tail;
	        if(n%2==0)
	        {
	            head=tail=n/2;
	        }
	        else
	        {
	            if(i==1)
	            {
	                head=n/2;
	                tail=n/2+1;
	            }
	            else
	            {
	                head=n/2+1;
	                tail=n/2;
	            }
	        }
	        if(q==1)
	        cout<<head<<endl;
	        else
	        cout<<tail<<endl;
	    }
	}
	return 0;
}
